{
  "manifest_version": 2,

  "name": "Voice Commands",
  "description": "This extension performs voice commands",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Image Getter"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs"
  ],
  "background":{
    "persistent": true,
    "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "http://*/*"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ]
}
